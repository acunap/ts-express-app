{
  "name": "ts-express-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "dev": "nodemon",
    "lint": "eslint ./src ./tests --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:features",
    "test:features": "cucumber-js -p default",
    "test:features:report": "cucumber-js -p default -f html:cucumber-report.html",
    "test:features:report:serve": "npm run test:features:report; mkdir reports; mv cucumber-report.html reports/; http-server ./reports -o cucumber-report.html | grep Open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^8.6.0",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.23",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "http-server": "^14.1.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.0",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "convict": "^6.2.3",
    "express": "^4.18.1",
    "node-dependency-injection": "^3.0.3",
    "pino": "^8.6.1",
    "pino-http": "^8.2.1"
  }
}
