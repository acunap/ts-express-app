{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/apps/backend/*"],
      "@tests/*": ["tests/*"],
      "@todos/*": ["src/contexts/todos/*"],
      "@errors/*": ["src/contexts/shared/domain/errors/*"],
      "@value-objects/*": ["src/contexts/shared/domain/value-objects/*", "src/contexts/todos/domain/value-objects/*"]
    }
  }
}
